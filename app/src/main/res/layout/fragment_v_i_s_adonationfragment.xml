<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.VISAdonationfragment">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="@color/ofwhite">

        <EditText
            android:id="@+id/mablag"
            android:layout_width="289dp"
            android:layout_height="60dp"
            android:layout_marginTop="88dp"
            android:layout_marginBottom="72dp"
            android:ems="10"
            android:hint="how   much"
            android:inputType="numberPassword"
            app:layout_constraintBottom_toTopOf="@+id/usernamepaypal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.688"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/usernamepaypal"
            android:layout_width="289dp"
            android:layout_height="57dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="220dp"
            android:layout_marginBottom="40dp"
            android:ems="10"
            android:hint="username paypal"
            android:inputType="textPersonName"
            app:layout_constraintBottom_toTopOf="@+id/passwordpaypal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />

        <EditText
            android:id="@+id/passwordpaypal"
            android:layout_width="274dp"
            android:layout_height="53dp"
            android:layout_marginBottom="40dp"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            app:layout_constraintBottom_toTopOf="@+id/dopaypal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/usernamepaypal" />

        <Button
            android:id="@+id/dopaypal"
            android:layout_width="303dp"
            android:layout_height="102dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="52dp"
            android:layout_marginBottom="100dp"
            android:backgroundTint="@color/babypink"
            android:text="donate"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordpaypal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>