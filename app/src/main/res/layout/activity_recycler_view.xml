<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RecyclerViewActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/projectslist"
        android:layout_width="404dp"
        android:layout_height="573dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.019" />

    <Button
        android:id="@+id/donatebtn"
        android:layout_width="247dp"
        android:layout_height="66dp"
        android:backgroundTint="@color/babypink"
        android:shadowColor="@color/babypink"
        android:text="donate"
        android:textColorHighlight="@color/babypink"
        app:strokeColor="@color/black"
        tools:layout_editor_absoluteX="66dp"
        tools:layout_editor_absoluteY="597dp" />

</androidx.constraintlayout.widget.ConstraintLayout>